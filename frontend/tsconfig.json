{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "public/output",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "types": [
            "@webgpu/types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}